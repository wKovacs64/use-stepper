{
  "name": "use-stepper",
  "version": "0.0.0-semantically-released",
  "description": "React hook to manage a numeric stepper/spinbutton",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "stepper",
    "counter",
    "increment",
    "decrement",
    "input",
    "spinbutton"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "source": "src/use-stepper.ts",
  "main": "dist/use-stepper.js",
  "module": "dist/use-stepper.m.js",
  "unpkg": "dist/use-stepper.umd.js",
  "types": "dist/use-stepper.d.ts",
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-stepper.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-stepper/issues"
  },
  "homepage": "https://github.com/wKovacs64/use-stepper#readme",
  "scripts": {
    "build": "microbundle",
    "clean": "rimraf dist coverage",
    "check-types": "tsc",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "husky:install": "husky install",
    "postinstall": "patch-package",
    "prebuild": "npm run --silent clean",
    "prepare": "run-s --silent husky:install build",
    "prepublishOnly": "run-s --silent lint check-types test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@testing-library/dom": "8.17.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "16.11.49",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@types/ws": "8.5.3",
    "@wkovacs64/prettier-config": "3.0.2",
    "c8": "7.12.0",
    "codecov": "3.8.3",
    "commitizen": "4.2.5",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "doctoc": "2.2.0",
    "eslint": "8.22.0",
    "eslint-plugin-wkovacs64": "13.15.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "microbundle": "0.15.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.78.0",
    "semantic-release": "19.0.3",
    "typescript": "4.7.4",
    "vitest": "0.22.0"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "patch-package": "6.4.7"
  }
}
