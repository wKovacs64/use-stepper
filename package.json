{
  "name": "use-stepper",
  "version": "4.0.2",
  "description": "React hook to manage a numeric stepper/spinbutton",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "stepper",
    "counter",
    "increment",
    "decrement",
    "input",
    "spinbutton"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "type": "module",
  "main": "dist/use-stepper.cjs",
  "module": "dist/use-stepper.js",
  "exports": {
    "import": "./dist/use-stepper.js",
    "require": "./dist/use-stepper.cjs"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-stepper.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-stepper/issues"
  },
  "homepage": "https://github.com/wKovacs64/use-stepper#readme",
  "scripts": {
    "build": "tsup ./src/use-stepper.ts --format cjs,esm --dts --sourcemap --clean",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "changeset publish",
    "clean": "rimraf dist coverage",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint .",
    "prepare": "npm run --silent build",
    "prepublishOnly": "run-s --silent lint typecheck test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@testing-library/dom": "9.3.4",
    "@testing-library/jest-dom": "6.3.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "20.11.7",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/ws": "8.5.10",
    "@vitest/coverage-v8": "1.2.1",
    "@wkovacs64/prettier-config": "3.0.3",
    "cross-env": "7.0.3",
    "doctoc": "2.2.1",
    "eslint": "8.56.0",
    "eslint-plugin-wkovacs64": "15.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rimraf": "5.0.5",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "vitest": "1.2.1"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
