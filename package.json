{
  "name": "use-stepper",
  "version": "4.0.1",
  "description": "React hook to manage a numeric stepper/spinbutton",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "stepper",
    "counter",
    "increment",
    "decrement",
    "input",
    "spinbutton"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "main": "dist/use-stepper.js",
  "module": "dist/use-stepper.mjs",
  "types": "dist/use-stepper.d.ts",
  "exports": {
    "import": "./dist/use-stepper.mjs",
    "require": "./dist/use-stepper.js"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/use-stepper.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-stepper/issues"
  },
  "homepage": "https://github.com/wKovacs64/use-stepper#readme",
  "scripts": {
    "build": "tsup ./src/use-stepper.ts --format cjs,esm --dts --sourcemap --clean",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only",
    "changeset:publish": "changeset publish",
    "clean": "rimraf dist coverage",
    "check-types": "tsc",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "postinstall": "patch-package",
    "prepare": "npm run --silent build",
    "prepublishOnly": "run-s --silent lint check-types test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.1",
    "@testing-library/dom": "9.3.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/node": "18.16.18",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@types/ws": "8.5.5",
    "@vitest/coverage-c8": "0.31.4",
    "@wkovacs64/prettier-config": "3.0.3",
    "c8": "7.14.0",
    "cross-env": "7.0.3",
    "doctoc": "2.2.1",
    "eslint": "8.42.0",
    "eslint-plugin-wkovacs64": "14.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "rimraf": "5.0.1",
    "tsup": "6.7.0",
    "typescript": "5.1.3",
    "vitest": "0.31.4"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  },
  "dependencies": {
    "patch-package": "7.0.0"
  }
}
