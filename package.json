{
  "name": "use-stepper",
  "version": "4.0.2",
  "description": "React hook to manage a numeric stepper/spinbutton",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "stepper",
    "counter",
    "increment",
    "decrement",
    "input",
    "spinbutton"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "type": "module",
  "main": "dist/use-stepper.cjs",
  "module": "dist/use-stepper.js",
  "exports": {
    "import": "./dist/use-stepper.js",
    "require": "./dist/use-stepper.cjs"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wKovacs64/use-stepper.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/use-stepper/issues"
  },
  "homepage": "https://github.com/wKovacs64/use-stepper#readme",
  "scripts": {
    "build": "tsup ./src/use-stepper.ts --format cjs,esm --dts --sourcemap --clean",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install",
    "changeset:publish": "changeset publish",
    "clean": "rimraf dist coverage",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prepare": "pnpm run --silent build",
    "prepublishOnly": "run-s --silent lint typecheck test:coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.10.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@types/ws": "8.18.1",
    "@vitest/coverage-v8": "4.0.17",
    "@wkovacs64/eslint-config": "7.12.0",
    "@wkovacs64/prettier-config": "4.2.4",
    "cross-env": "10.1.0",
    "doctoc": "2.2.1",
    "eslint": "9.39.2",
    "happy-dom": "20.3.4",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-test-renderer": "19.2.3",
    "rimraf": "6.1.2",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "react": ">= 16.8.0"
  }
}
